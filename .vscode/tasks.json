{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Make documentation",
      "command": "bash docs.sh"
    },
    {
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "label": "Run tests (tests/Main.hs)",
      "command": "cabal",
      "args": ["run"]
    },
    {
      "type": "shell",
      "label": "Build library",
      "command": "cabal",
      "args": ["build"]
    },
    {
      "type": "shell",
      "label": "Build distribution tarball",
      "command": "cabal",
      "args": ["sdist"]
    }
  ]
}
